<h1>Listing offers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Payout</th>
    <th>Network</th>
    <th>Url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @offers.each do |offer| %>
  <tr>
    <td><%= offer.name %></td>
    <td><%= offer.payout %></td>
    <td><%= offer.network_id %></td>
    <td><%= offer.url %></td>
    <td><%= link_to 'Show', [:admin,@offer] %></td>
    <td><%= link_to 'Edit', edit_admin_offer_path(offer) %></td>
    <td><%= link_to 'Destroy', [:admin,@offer], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

